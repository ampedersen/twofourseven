<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RadioPlayerButton">
        <attr name="action" format="enum">
            <enum name="play" value="0"/>
            <enum name="stop" value="1"/>
            <enum name="pause" value="2"/>
            <enum name="next" value="3"/>
            <enum name="previous" value="4"/>
        </attr>
        <attr name="audioUrl" format="string" />
        <attr name="audioTitle" format="string" />
        <attr name="audioDescription" format="string" />
        <attr name="audioTopic" format="string" />
        <attr name="audioStartTime" format="string" />
        <attr name="audioEndTime" format="string" />
        <attr name="audioProgramTitle" format="string" />
        <attr name="adaptActionAfterPlay" format="boolean" />

        <attr name="playIcon" format="reference" />
        <attr name="stopIcon" format="reference" />
        <attr name="pauseIcon" format="reference" />

    </declare-styleable>

    <declare-styleable name="DateLineView">
        <attr name="whiteBackground" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ProgramImageView">
        <attr name="imageUrl" format="string" />
        <attr name="tintColor" format="color" />
        <attr name="forceFullQuality" format="boolean" />
    </declare-styleable>
</resources>