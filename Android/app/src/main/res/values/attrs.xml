<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RadioPlayerButton">
        <attr name="action" format="enum">
            <enum name="play" value="0"/>
            <enum name="stop" value="1"/>
            <enum name="pause" value="2"/>
            <enum name="next" value="3"/>
            <enum name="previous" value="4"/>
        </attr>
        <attr name="url" format="string" />
        <attr name="programId" format="integer" />
    </declare-styleable>

    <declare-styleable name="DateLineView">
        <attr name="whiteBackground" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ProgramImageView">
        <attr name="imageUrl" format="string" />
        <attr name="tintColor" format="color" />
    </declare-styleable>
</resources>