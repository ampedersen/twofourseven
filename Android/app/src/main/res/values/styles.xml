<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Instead of white background color on startup -->
        <item name="android:windowBackground">@color/radio_black</item>
    </style>

    <!-- TEXTS -->
    <style name="PageTitleText" >
        <item name="android:textColor">@color/radio_white</item>
        <item name="android:textSize">@dimen/program_category_text_size</item>
    </style>

    <style name="SectionTitleText" >
        <item name="android:textColor">@color/radio_white</item>
        <item name="android:textSize">@dimen/page_title_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="RedTitleText" >
        <item name="android:textColor">@color/radio_red</item>
        <item name="android:textSize">@dimen/schedule_time_text_size</item>
    </style>

    <style name="SidePageTitleText" parent="PageTitleText">
        <item name="android:textColor">@color/radio_black</item>
    </style>

    <style name="PodcastEpisodeTitleText" >
        <item name="android:textColor">@color/radio_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/podcast_episode_title_text_size</item>
    </style>

    <style name="PodcastProgramTitleText" >
        <item name="android:textColor">@color/radio_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/podcast_program_title_text_size</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ScheduleProgramTitleText" parent="PodcastProgramTitleText">
        <item name="android:textColor">@color/radio_black</item>
    </style>

    <style name="ProgramCategoryText" >
        <item name="android:textSize">@dimen/program_category_text_size</item>
    </style>

    <style name="ScheduleTimeText">
        <item name="android:textColor">@color/radio_red</item>
        <item name="android:textSize">@dimen/schedule_time_text_size</item>
    </style>

    <style name="DateText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/date_text_size</item>
    </style>

    <style name="Tooltip" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">75dp</item>
        <!-- <item name="android:maxWidth">150dp</item> -->
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/radio_white</item>
        <item name="android:textSize">@dimen/podcast_episode_title_text_size</item>
    </style>


    <!-- BUTTONS -->
    <style name="PageBackButton" >
        <item name="android:textColor">@color/radio_gray_light</item>
        <!-- TODO use image instead of text for back symbol -->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="TextButton" >
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:background">@color/transparent</item>
    </style>

</resources>
