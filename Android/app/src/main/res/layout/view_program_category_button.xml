<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_white_background"
        >

        <!-- Has to be a LinearLayout nested inside a RelativeLayout or else the TextView will not expand to match parent width. Go figure. -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <View
            android:id="@+id/selected_indicator"
            android:layout_width="3dp"
            android:layout_height="32dp"
            android:background="@color/radio_gray"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/topic_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kategorinavn her"
            style="@style/ProgramCategoryText"
            />

        </LinearLayout>

    </RelativeLayout>

</merge>