<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.molamil.radio24syv.ScheduleFragment"
    android:background="@color/radio_white"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/app_margin_25"
            android:paddingBottom="@dimen/app_margin_25"
            android:orientation="vertical"
            >

            <com.molamil.radio24syv.components.TextViewNeueHaasGrotesk65Md
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/schedule_header"
                android:textColor="@color/radio_black"
                android:layout_marginBottom="@dimen/app_margin_half75"
                style="@style/SectionTitleText"
                />

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                />

            <!--
            <TextView
                android:id="@+id/loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:visibility="gone"
                android:layout_gravity="center"
                />
            -->

            <ProgressBar
                android:id="@+id/activity_indicator"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/app_margin_half25"
                android:layout_gravity="center">
            </ProgressBar>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
