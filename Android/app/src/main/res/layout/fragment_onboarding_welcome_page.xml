<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.molamil.radio24syv.PageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingBottom="100dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/audio_curve"
            android:layout_marginBottom="@dimen/app_margin_25"/>

        <com.molamil.radio24syv.components.TextViewNeueHaasGrotesk65Md
            android:textColor="@color/radio_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin_25"
            android:layout_marginRight="@dimen/app_margin_25"
            android:layout_marginBottom="@dimen/app_margin_25"
            android:textSize="21sp"
            android:text="@string/onboarding_welcome" />

        <com.molamil.radio24syv.components.TextViewNeueHaasGrotesk65Md
            android:textColor="@color/radio_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin_25"
            android:layout_marginRight="@dimen/app_margin_25"
            android:layout_marginBottom="@dimen/app_margin_50"
            android:textSize="21sp"
            android:text="@string/onboarding_intro_message" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.molamil.radio24syv.components.TextViewNeueHaasGrotesk55Rg
            android:textColor="@color/radio_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin_25"
            android:textSize="13sp"
            android:text="@string/onboarding_intro_hint" />

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/button_arrow_white_small"/>

        </LinearLayout>

    </LinearLayout>

    <!--
    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
        android:text="Welcome page" />
    -->
</RelativeLayout>