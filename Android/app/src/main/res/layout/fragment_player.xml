<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.molamil.radio24syv.PlayerFragment"
    android:background="@color/radio_gray_dark"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_fragment_player" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/size_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="size"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:gravity="center"
            android:layout_centerInParent="true"
            />

        <com.molamil.radio24syv.view.RadioPlayerButton
            android:id="@+id/next_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            app:action="next"
            />
        <com.molamil.radio24syv.view.RadioPlayerButton
            android:id="@+id/previous_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/next_button"
            app:action="previous"
            />
        <com.molamil.radio24syv.view.RadioPlayerButton
            android:id="@+id/pause_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/previous_button"
            app:action="pause"
            />
        <com.molamil.radio24syv.view.RadioPlayerButton
            android:id="@+id/stop_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/pause_button"
            app:action="stop"
            />
        <com.molamil.radio24syv.view.RadioPlayerButton
            android:id="@+id/play_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/stop_button"
            app:action="play"
            />


    </RelativeLayout>

    <View
        android:id="@+id/big_thingy"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="gone" />

</FrameLayout>
