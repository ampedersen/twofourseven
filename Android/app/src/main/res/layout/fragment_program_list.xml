<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.molamil.radio24syv.ProgramsFragment"
    android:background="@color/radio_black"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/programs_header"
                style="@style/PageTitleText"
                />

            <Button
                android:id="@+id/categories_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Se kategorier"
                />

            <Button
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Søg"
                />

            <TextView
                android:id="@+id/topic_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anbefalet"
                android:textColor="@color/radio_red"/>

            <TextView
                android:id="@+id/loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indlæser..."
                android:visibility="gone"
                android:layout_gravity="center"
                />

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@android:drawable/divider_horizontal_bright"
                android:showDividers="middle"
                >

                <!-- Program buttons are added here -->

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
