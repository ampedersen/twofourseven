<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_margin_25"
        android:layout_marginBottom="@dimen/app_margin_25">

    <TextView
        android:id="@+id/date_text"
        android:layout_weight="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="September 1980"
        android:singleLine="true"
        android:textAllCaps="true"
        style="@style/DateText"
        />

    <ImageView
        android:id="@+id/line_left"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/radio_gray"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/app_margin_half25"
        android:layout_toLeftOf="@+id/date_text"
        />

    <ImageView
        android:id="@+id/line_right"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/radio_gray"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/app_margin_half25"
        android:layout_toRightOf="@+id/date_text"
        />

</RelativeLayout>