<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.molamil.radio24syv.ProgramCategoriesFragment"
    android:background="@color/radio_white"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.molamil.radio24syv.components.TextViewNeueHaasGrotesk65Md
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/program_categories_header"
                android:textColor="@color/radio_black"
                android:layout_margin="@dimen/app_margin_25"
                style="@style/SectionTitleText"
                />

            <LinearLayout
                android:id="@+id/content_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/app_margin_50"
                android:layout_marginRight="@dimen/app_margin_50"
                android:layout_marginBottom="20dp"
                />

            <LinearLayout
                android:id="@+id/content_middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/app_margin_50"
                android:layout_marginRight="@dimen/app_margin_50"
                android:layout_marginBottom="20dp"
                />

            <LinearLayout
                android:id="@+id/content_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_margin_50"
                android:layout_marginRight="@dimen/app_margin_50"
                android:orientation="vertical"
                />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
